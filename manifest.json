{
  "manifest_version": 3,
  "name": "Rijunime.Com",
  "version": "1.0.0",
  "description": "Extension untuk meningkatkan pengalaman menonton anime di rijunime.com",
  "permissions": [
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "*://rijunime.com/*",
    "*://*.rijunime.com/*",
    "*://www.google-analytics.com/*",
    "*://analytics.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rijunime.Com",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://rijunime.com/*", "*://*.rijunime.com/*"],
      "js": ["analytics-config.js", "analytics.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "analytics.js"],
      "matches": ["*://rijunime.com/*", "*://*.rijunime.com/*"]
    }
  ]
}
